---
import ToggleDarkMode from '../components/ToggleDarkMode';
import Label from './Label';
---

<nav>
    <a href="/">
        <span class="text-gradient">Alan's Lab</span>
        <Label name="Beta"/>
    </a>
    <ul>
        <li><a href="https://github.com/alanakra" aria-label="GitHub"><i class="ri-github-fill"></i></a></li>
        <li><a href="https://codepen.io/alanakra" aria-label="Codepen"><i class="ri-codepen-line"></i></a></li>
        <li><ToggleDarkMode client:load/></li>
    </ul>
</nav>

<style lang="scss">
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        & > a {
            font-family: 'Poppins', sans-serif;
            font-size: 3rem;
            font-weight: 800;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        a {
            text-decoration: none;
        }

        ul {
            color: var(--text-color);
            font-size: 2rem;
            display: flex;
            gap: 24px;

            li {
                a {
                    color: var(--text-color);
                    i {
                        font-size: 2.5rem;
                    }
                    span {
                        font-family: "Roboto",monospace;
                    }
                }
            }
        }
    }
    @media screen and (max-width: 550px) {
        nav {
            flex-direction: column !important;
        }
    }
</style>